<UserControl x:Class="TRS.TMS12.TicketPlugins.FukukouOu.Round3.InputControl_For_DefaultScoreSetting"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Classic"
             xmlns:local="clr-namespace:TRS.TMS12.TicketPlugins.FukukouOu.Round3"
             mc:Ignorable="d" 
             xmlns:r="clr-namespace:TRS.TMS12.Resources;assembly=MS-12.PluginHost"
             d:DesignHeight="856" d:DesignWidth="640"
             TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" UseLayoutRounding="True" SnapsToDevicePixels="True"
             FocusManager.IsFocusScope="True"
             Visibility="{Binding Visibility, Mode=TwoWay}" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PresentationFramework.Classic;component/themes/classic.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MS-12.PluginHost;component/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Template" Value="{StaticResource ThicklyBorderedDefButton}"/>
                <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                <Setter Property="FontFamily" Value="MS Gothic"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>
            <Style x:Key="CaptionText" TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="MS Gothic"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Foreground" Value="MediumBlue"/>
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Foreground" Value="MediumBlue"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="MS Gothic"/>
                <Setter Property="FontSize" Value="16"/>
                <Style.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Foreground" Value="Black"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel Margin="10">
        <ContentControl DockPanel.Dock="Top" Margin="0,0,0,10" Style="{StaticResource ClassicBorder}">
            <DockPanel Margin="10" Height="45">
                <Button DockPanel.Dock="Right" Margin="10,0,0,0" Width="130" Content="ｻｲﾄﾞﾒﾆｭｰ" Command="{Binding SideMenu}"/>
                <Label HorizontalContentAlignment="Left" Content="Round 1 デフォルト得点設定" FontSize="20" Template="{StaticResource LogBox}"/>
            </DockPanel>
        </ContentControl>
        <ContentControl DockPanel.Dock="Top" Margin="0,0,0,10" Style="{StaticResource ClassicBorder}">
            <ContentControl.Resources>
                <Style TargetType="ContentControl" BasedOn="{StaticResource ThinPressedClassicBorder}">
                    <Setter Property="Width" Value="80"/>
                    <Setter Property="Focusable" Value="False"/>
                </Style>
            </ContentControl.Resources>
            <StackPanel Orientation="Vertical" Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,40" Height="42">
                    <ContentControl Margin="0,0,20,0">
                        <Label Content="正解" Style="{StaticResource CaptionText}"/>
                    </ContentControl>
                    <TextBox x:Name="CORRECT" Text="{Binding Path=TextBoxes[(local:InputControlTextBox_For_DefaultScoreSetting)CORRECT], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             HorizontalContentAlignment="Right" MaxLength="2" Width="70">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="GotKeyboardFocus">
                                <prism:InvokeCommandAction Command="{Binding GotFocus}" CommandParameter="CORRECT"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <ContentControl Margin="20,0,20,0">
                        <Label Content="不正解" Style="{StaticResource CaptionText}"/>
                    </ContentControl>
                    <TextBox x:Name="MISS" Text="{Binding Path=TextBoxes[(local:InputControlTextBox_For_DefaultScoreSetting)MISS], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             HorizontalContentAlignment="Right" MaxLength="2" Width="70">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="GotKeyboardFocus">
                                <prism:InvokeCommandAction Command="{Binding GotFocus}" CommandParameter="MISS"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <ContentControl Margin="20,0,20,0">
                        <Label Content="スルー" Style="{StaticResource CaptionText}"/>
                    </ContentControl>
                    <TextBox x:Name="ASK_THROW" Text="{Binding Path=TextBoxes[(local:InputControlTextBox_For_DefaultScoreSetting)ASK_THROW], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             HorizontalContentAlignment="Right" MaxLength="2" Width="70">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="GotKeyboardFocus">
                                <prism:InvokeCommandAction Command="{Binding GotFocus}" CommandParameter="ASK_THROW"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                </StackPanel>
            </StackPanel>
        </ContentControl>
    </DockPanel>
</UserControl>